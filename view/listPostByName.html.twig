{% extends 'base.html.twig' %}

{% block titlePage %}
    <div class="row">
        <div class="col-md-6">
            <h2 class="mb-4">Cat√©gorie : {{ Category }}</h2>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="col-md-12 col-lg-8 main-content">
        <div class="row mb-5 mt-5">

            <div class="col-md-12">
                {% for post in posts %}
                    {#{{ dump(post) }}#}
                    <div class="post-entry-horzontal">
                        <a href="?action=post&id={{ post.id }}">
                            <div class="image element-animate" data-animate-effect="fadeIn"
                                 style="background-image: url('public/images/post/{{ post.postImg }}');"></div>
                            <span class="text">
                      <div class="post-meta">
                        <span class="author mr-2"><img src="public/images/person_1.jpg"
                                                       alt="Colorlib"> {{ post.author }}</span>&bullet;
                        <span class="mr-2">{{ post.createDate }}</span> &bullet;
                        <span class="mr-2">{{ post.namecategory }}</span> &bullet;
                        <span class="ml-2"><span class="fa fa-comments"></span> {{ post.nbrcomment }}</span>
                      </div>
                      <h2>{{ post.title }}</h2>
                    </span>
                        </a>
                    </div>
                {% endfor %}
                <!-- END post -->
            </div>
        </div>
    </div>

{% endblock %}